# Azure Blob Storage Configuration
# Copy this file to .env and replace the placeholder values with your actual Azure credentials

# Azure Storage Connection String
# Format: DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here

# Source container name (where original labels.json files are stored)
AZURE_SOURCE_CONTAINER_NAME=your_source_container_name

# Destination container name (where corrected labels.json files will be uploaded)
AZURE_DESTINATION_CONTAINER_NAME=your_destination_container_name

# Optional: Ground truth CSV path (if using ground truth correction)
# GROUND_TRUTH_CSV_PATH=data/ground_truth/your_ground_truth.csv 